import string
import random
from colorama import init, Fore

init()
cod = 0
pass = ''

while(True):
 show_menu()
 cod = int(input())
 try:
   if (cod == 1):
    creat_pass()
   elif (cod == 2):
    pass = input("Digite a senha a ser tratada:")
    treat_pass(pass)
   elif (cod == 3):
    pass = input("Digite a senha a ser verificada:")
    verify_pass(pass)
   elif (cod == 4):
    break
   else:
    print("Opção inválida!")
 except ValueError:
   print("Digite um número válido!")
